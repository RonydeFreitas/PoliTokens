{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "files": [{
        "destination": "build/css/colors.css",
        "format": "css/variables",
        "options": {
          "outputReferences": true
        }
      }]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "./js/",
      "files": [
        {
          "destination": "colors.js",
          "format": "javascript/module-flat",
          "options": {
            "outputReferences": true
          }
        }
      ]
    }
  }
}
