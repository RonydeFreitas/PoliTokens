{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "files": [{
        "destination": "_variables.css",
        "format": "css/variables",
        "options": {
          "outputReferences": true
        }
      }],
      "transforms": ["attribute/cti", "name/cti/camel", "color/hex", "size/rem", "color/css", "shadow/css"]
    }
  }
}
