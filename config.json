
{
  "source": ["tokens/base/new/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "files": [{
        "destination": "_base_light.css",
        "format": "css/variables",
        "options": {
          "outputReferences": true
        }
      }]
    },
    "js": {
      "transforms": ["name/cti/camel","color/css", "size/object"],
      "transformGroup": "js",
      "buildPath": "build/js/",
      "isSource": true,
      "files": [{
          "destination": "_base_light.js",
          "format": "javascript/module-flat",
          "options": {
            "outputReferences": true
          }
        }]
    }
  }
}